@import	'~marx-css/styl/marx.styl'
@import	'./vendor/rupture.styl'
$base = #8c0c0c
$black = #2d2d2d
$gray = #ccc
$dark-gray = #999
$white = #fff

	@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,800;0,800&display=swap')

body
	color: $black
	font-family: 'Playfair Display', serif
	h2
		font-weight: 700
		text-transform: lowercase
		margin: 0
.l-aside-nav
	position: fixed
	left: 0
	top: 25vh
	height: 50vh
	margin: 0 5px
	ul
		position: relative
		height: 100%
		width: 100%
	li
		display: block
		width: 5px
		height: calc(100% / 4)
		margin: 1px 0
		a
			display: block
			width: 100%
			height: 100%
			background-color: $gray
			&.-is-active
				background-color: $base
			> span
				display: none
.l-header
	background-color: $white
	position: sticky
	top: 0
	padding: 15px
	display: grid
	grid-template-columns: 150px calc(100% - 180px)
	gap: 30px
	z-index: 2
	> .logo
		margin: 0
		transform-origin: 0 0
		transition: .5s ease-in-out
		&.opening
			transform: translateY(calc(25vh - 15px)) scale(2)
		svg
			fill: $black
			width: 150px
	> nav
			ul
				li
					display inline-block
					a
						padding: 10px 15px
						text-transform: lowercase
						color: $black
						font-weight: 700
						&.-is-active
							color: $dark-gray
.l-section
	height: 100vh
	padding: 100px 15px 15px

.c-tab-nav
	display: grid
	grid-template-columns: 140px 1fr
	padding: 30px 0
	min-height: 50vh
	.tabs
		margin: 0
		.c-tab-item
			padding: 5px 10px
			font-weight: 700
			color: $dark-gray
			text-transform: lowercase
			position: relative
	> .contents
		height: 100%
		border-left: 2px solid $black
		padding-left: 20px
	&.-navigation-ready
		.c-tab-item
			cursor: pointer
			&.-current
				color: $black
				&::after
					content: ''
					position: absolute
					top: 0
					right: 0
					width: 5px
					height: 100%
					background-color: $black

		.tab-content
			display: none
			&.-current
				display: block
